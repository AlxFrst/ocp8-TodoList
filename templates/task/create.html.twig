{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        {{ form_start(form, {'action' : path('task_create'), 'attr': {'data-turbo': 'false'}}) }}
            {{ form_label(form.title, 'Titre de la tâche') }}
            {{ form_widget(form.title) }}
            {{ form_errors(form.title) }}
            {{ form_label(form.content, 'Description de la tâche') }}
            {{ form_widget(form.content) }}
            {{ form_errors(form.content) }}

            <button type="submit" class="btn btn-success pull-right mt-2">Créer la tâche</button>
        {{ form_end(form) }}

        <a href="{{ path('task_list_undone') }}" class="btn btn-primary mt-2">Retour à la liste des tâches à faire</a>
    </div>
{% endblock %}
